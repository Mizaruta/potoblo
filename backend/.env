# Configuration du serveur
PORT=5000
NODE_ENV=development

# Clé secrète JWT (à changer en production)
JWT_SECRET=your_jwt_secret_key_here

# Configuration MongoDB
MONGO_URI=mongodb://localhost:27017/dropstyle
# Alternative pour MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dropstyle

# Configuration email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@dropstyle.fr
EMAIL_FROM_NAME=DropStyle

# Configuration Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Configuration fournisseurs
SUPPLIER_A_API_URL=https://api.suppliera.com
SUPPLIER_A_API_KEY=your_supplier_a_api_key
SUPPLIER_B_API_URL=https://api.supplierb.com
SUPPLIER_B_API_KEY=your_supplier_b_api_key

# URL frontend pour les emails et redirection
FRONTEND_URL=http://localhost:3000 